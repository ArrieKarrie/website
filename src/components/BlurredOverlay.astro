<div 
	id="blurredOverlay"
	class="bg-[var(--color-background-light)]/70 dark:bg-[var(--color-background-dark)]/70"
/>
</div>

<style>
    #blurredOverlay {
		opacity: 0;
		width: 100svw;
		height: 100svh;
		left: 50%;
		top: 50%;
		transform: translate(-50%, -50%);
		z-index: 9;
		pointer-events: none;
		backdrop-filter: blur(5px);
		display: block;
		position: fixed;
		transition: opacity 350ms ease-in-out;
	}

	#blurredOverlay.open {
		opacity: 1;
		pointer-events: all;
		transition: opacity 350ms ease-in-out;
	}
</style>
